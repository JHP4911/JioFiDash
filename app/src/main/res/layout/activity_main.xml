<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">





    <TextView
        android:id="@+id/tv_download_total_data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/download_speed_label" />

    <TextView
        android:id="@+id/tv_total_download_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/default_data_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_download_total_data_label"
        app:layout_constraintStart_toEndOf="@+id/tv_download_total_data_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_download_total_data_label" />

    <TextView
        android:id="@+id/tv_total_upload_data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/upload_label"
        app:layout_constraintBottom_toTopOf="@+id/tv_total_download_data"
        app:layout_constraintStart_toEndOf="@+id/tv_total_download_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_download_data" />

    <TextView
        android:id="@+id/tv_total_upload_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/default_data_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_total_upload_data_label"
        app:layout_constraintStart_toEndOf="@+id/tv_total_upload_data_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_upload_data_label" />

    <TextView
        android:id="@+id/tv_users_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/users_text_label"
        app:layout_constraintStart_toStartOf="@+id/tv_download_total_data_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_download_total_data_label"
        android:textColor="@color/colorGrey"/>

    <TextView
        android:id="@+id/tv_users_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/users_default_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_users_label"
        app:layout_constraintStart_toEndOf="@+id/tv_users_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_users_label" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="chirath-HP-Pavilion-Notebook"
        app:layout_constraintStart_toStartOf="@+id/tv_users_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_users_label" />

    <TextView
        android:id="@+id/tv_user_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="Connected"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_name"
        app:layout_constraintStart_toEndOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_connected"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name">

    </com.google.android.material.textfield.TextInputLayout>

    <include
        android:id="@+id/include"
        layout="@layout/battery_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <include
            layout="@layout/lte_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            layout="@layout/lte_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <include
        layout="@layout/data_speed_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_margin="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>