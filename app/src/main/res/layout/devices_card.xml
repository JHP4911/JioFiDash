<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/colorBackgroundCard"
    app:cardBackgroundColor="@color/colorBackgroundCard"
    app:cardCornerRadius="3dp"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/devices_label_text"
            android:layout_width="@dimen/card_header_icon"
            android:layout_height="@dimen/card_header_icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_round_devices_24px" />

        <TextView
            android:id="@+id/tv_devices_label"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/devices_label"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/devices_label_text"
            app:layout_constraintTop_toTopOf="@+id/devices_label_text" />

        <TextView
            android:id="@+id/tv_devices_label_caption"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/connected_devices_caption_text"
            android:textColor="@color/colorGreyDark"
            app:layout_constraintBottom_toTopOf="@+id/tv_devices_count"
            app:layout_constraintStart_toEndOf="@+id/tv_devices_count"
            app:layout_constraintTop_toBottomOf="@+id/tv_devices_count" />

        <TextView
            android:id="@+id/tv_devices_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_devices_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_devices_label" />

        <ImageView
            android:id="@+id/devices_divided"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGreyDark"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devices_label_text"
            app:srcCompat="?attr/dividerHorizontal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>